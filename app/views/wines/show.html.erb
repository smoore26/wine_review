<article class ="wine">
  <header>
     <h2><%= @wine.name %></h2>
  </header>
  <p><label>Year:</label><%= @wine.year %></p
  <p><label>Winery:</label><%= @wine.winery %></p>
  <p><label>Country:</label><%= @wine.country %></p>
  <p><label>Varietal:</label><%= @wine.varietal %>
</article>
 
 <%= link_to 'All Wines', wines_path %>

 <%= link_to 'Edit', edit_wine_path(@wine) %>
 <%= button_for 'Delete', @wine, method: :delete,
     data: {confirmation: 'Are you sure you wish to delete?'} %>
